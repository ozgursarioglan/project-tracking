<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Category</th>
      <th>Type</th>
      <th>Project</th>
      <th>Priority</th>
      <th>Department</th>
      <th>Isprivate</th>
      <th>Assignedby</th>
      <th>Openedby</th>
      <th>Openeddate</th>
      <th>Closedby</th>
      <th>Closeddate</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.status %></td>
        <td><%= issue.category %></td>
        <td><%= issue.type %></td>
        <td><%= issue.project %></td>
        <td><%= issue.priority %></td>
        <td><%= issue.department %></td>
        <td><%= issue.isprivate %></td>
        <td><%= issue.assignedby %></td>
        <td><%= issue.openedby %></td>
        <td><%= issue.openeddate %></td>
        <td><%= issue.closedby %></td>
        <td><%= issue.closeddate %></td>
        <td><%= issue.deadline %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
